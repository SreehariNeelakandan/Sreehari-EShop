<script>

  function cancelOrder(orderId,proId) {
      $.ajax({
          url: '/cancelOrder',
          data: {
              orderId:orderId,
              productId: proId
          },
          method: 'put',
          beforeSend: () => {
              return confirm('are you sure')
          },
          success:(response)=>{
               window.location.reload()
          }

      })
  }

 function returnorder(orderId,proId){
  $.ajax({
    url:'/return-order',
    method:'post',
    data:{
      orderId:orderId,
      proId:proId,
    },  beforeSend: () => {
              return confirm('are you sure')
          },
    success:(response)=>{
      if(response.status){
            location.reload()
      }else{
       return alert("already returned")
      }
    }
  })
 }





