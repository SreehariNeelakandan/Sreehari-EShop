<div class="table-responsive pt-3">
    <a href="/admin/add-category" class="btn btn-primary my-3">add Category</a>
  
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            catogory
          </th>
          <th>
            ADD catogory
          </th>
  
  
        </tr>
      </thead>
      <tbody>
        <% category.forEach((category,index)=>{ %> 
  <tr>
    <td>
<%- index+1 %> 
    </td>
    <td>
     <%= category.name.toUpperCase() %> 
    </td>
    <td>
 <!-- <a href="/admin/edit-category/<%- category._id%>" class="btn btn-success">edit</a> -->
 <a href="/admin/edit-category/<%=category._id%>"> <button class="btn-primary">edit</button></a> 

 <button onclick="deleteC('<%=category._id%>' )" class="btn-danger">delete</button>  
</td>
   
  </tr>
<% }) %> 
      </tbody>
    </table>
  </div>

  <script>
    const deleteC = (id) => {
      if (prompt('Delete Category ? Type yes to confirm', 'yes')?.trim() == 'yes') {
  
        fetch(`/admin/delete-category/${id}`, {
          method: "delete",
          headers: {
            'Content-Type': 'application/json'
          },
        }).then((res)=>{
          window.location.reload()
        })
      };
    }
  </script>