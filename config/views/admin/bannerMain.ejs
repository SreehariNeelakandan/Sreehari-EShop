<div class="table-responsive pt-3">
  <a class="btn btn-primary my-3" href="/admin/add-bannerMain">add Banner</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          name

        </th>
        <th>
          image
        </th>
        <th>
          Description
        </th>
        <th>
          market price
        </th>
        <th>
          offer price

        </th>
        <th>
          <!-- <button>btn</button> -->
        </th>


      </tr>
    </thead>
    <tbody>
      <% bannerData.forEach((element,index)=>{ %>

        <tr>
          <td>
            <%= index+1 %>
          </td>
          <td>
            <%=element.name %>
          </td>
          <td>
            <img style="border-radius:0;" src="/assets/banner-images/<%=element.img[0]%> " alt="img">
          </td>

          <td>
            <%=element.description %>
          </td>
          <td>
            <%= element.marketprice %>
          </td>

          <td>
            <%= element.offerprice %>
          </td>
          <td>
            <button onclick="deleteBanner('<%=element._id%>' )" class="btn-danger">delete</button>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>


<script>
  const deleteBanner = (id) => {
    if (prompt('Delete Category ? Type yes to confirm', 'yes')?.trim() == 'yes') {

      fetch(`/admin/delete-mainBanner/${id}`, {
        method: "delete",
        headers: {
          'Content-Type': 'application/json'
        },
      }).then((res)=>{
        window.location.reload()
      })
    };
  }
</script>